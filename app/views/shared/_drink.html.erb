<article class="card flex-row justify-content-bewteen my-4 mx-3 mb-2 card__info">
  <%= show_icon(drink) %>
  
  <div class="d-flex flex-column full-width pr-4">

    <div class="flex__half d-flex flex-column justify-content-end">
      <div class="d-flex flex-column justify-contet-bewteen">
        <div class="d-flex justify-content-between align-items-end pb-2">
          <h2 class="card__info-main m-0">
            <%= drink.name %>
          </h2>
  
          <span class="card__info-main card__amount-color">
            <%= drinks_total(drink.amount) %>
          </span>
        </div>
      </div>
    </div>

    <div class="flex__half d-flex flex-column justify-content-end card__info-bottom pb-2">
      <div class="d-flex justify-content-between">
        <time><%= drink.created_at %></time>

        <span>
          Created by:
          <%= drink.author.name %>
        </span>
      </div>
    </div>
  </div>

</article>