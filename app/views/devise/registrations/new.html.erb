<%= page_name('Sign up') %>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'd-flex flex-column full-height mt-10' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="py-2 px-4">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'name' %>
  </div>

  <div class="pl-4">
    <hr/>
  </div>

  <div class="py-2 px-4">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'email' %>
  </div>

  <div class="pl-4">
    <hr/>
  </div>

  <div class="py-2 px-4">
    <%= minimum_password_length(f) %>
  </div>

  <div class="pl-4">
    <hr/>
  </div>

  <div class="py-2 px-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'confirm your password', class:'full-width' %>
  </div>

  <div class="pl-4 mb-8">
    <hr/>
  </div>

  <%= f.submit "Sign up" , class: 'position-fixed button__info component--stick-to-bottom btn btn-success full-width' %>
<% end %>