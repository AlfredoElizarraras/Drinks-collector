<article class="card flex-row justify-content-bewteen my-4 mx-3 mb-2 card__info position-relative">
  <%= link_to  "X", group_path(group), method: :delete, 
  data: { confirm: "Are you sure to erase #{group.name} group?" },
  class: 'position-absolute postion-top position-right px-1 erase-button' %>

  <%= show_group_icon(group) %>
  
  <div class="d-flex flex-column full-width pr-4">

    <div class="flex__half d-flex flex-column justify-content-end">
      <div class="d-flex justify-content-between align-items-end pb-2">
        <h2 class="card__info-main m-0">
          <%= link_to group.name, group %>
        </h2>
      </div>
    </div>

    <div class="flex__half d-flex flex-column justify-content-end card__info-bottom pb-2">
      <div class="d-flex justify-content-between">
        <time><%= format_date(group.created_at) %></time>

        <span>
          Created by:
          <%= group.user.name %>
        </span>
      </div>
    </div>
  </div>

</article>